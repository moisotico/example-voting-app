pipeline {
    
    agent none

    stages{
        stage('build'){
            agent {
                docker {
                    image 'node:8.16.0-alpine'
                }
            }
            when{
                changeset "**/result/**"
            }
            steps{
                echo 'Compiling result app'
                dir('result') {
                    sh 'npm install'
                }
            }
        }
        stage('test'){
            agent {
                docker {
                    image 'node:8.16.0-alpine'
                }
            }
            when{
                changeset "**/result/**"
            }
            steps{
                echo 'Running Unit Tests on result app'
                dir('result') {
                    sh 'npm install'
                    sh 'npm test'
                }
            }
        }
       stage('docker-package') {
            agent any
            when {
                changeset '**/result/**'
            }
            steps {
                echo 'Packaging result app with docker'
                script{
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerlogin') {
                        def resultImage = docker.build("moisolinux/result:v${env.BUILD_ID}", "./result")
                        resultImage.push()
                        sh 'echo "branch is ${BRANCH_NAME}"'
                        resultImage.push("${BRANCH_NAME}")
                    }
                }
            }
        }
    }
}
